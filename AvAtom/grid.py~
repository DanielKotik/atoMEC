# import standard packages

# import external packages
import numpy as np
from math import exp

# import internal packages
import config

class GridSetup():
    '''
    Holds the numerical grid (both the logarithmic and real space grid)
    '''

    def __pass__(self,atom):
        
        '''
        Initializes the numerical grids

        Inputs:
        - atom (object)     : the atom object
        '''

        xl=config.grid["x0"] # left hand most grid point in x co-ordinates
        xr=exp(atom.radius) # right hand most grid point in x co-ords

        # define the x-grid
        self.xgrid=np.linspace(xl,xr,config.grid["ngrid"])
        # define the r-grid
        self.rgrid=np.exp(self.xgrid)
        
